<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Web">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/search_but"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search"
                android:onClick="focusSearchBar"/>
            <EditText
                android:id="@+id/web_address"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:inputType="textWebEditText"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <WebView
            android:id="@+id/webSpace"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/web_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserName"
                    android:padding="10dp"
                    android:onClick="copyUsername"
                    />
                <TextView
                    android:id="@+id/web_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:padding="10dp"
                    android:onClick="copyPassword"
                    />
            </LinearLayout>
    </LinearLayout>
</ScrollView>