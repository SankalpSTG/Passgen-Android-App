<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPassword">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AddPassword">

        <Button
            android:id="@+id/button"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_below="@id/etxt_password_registration2"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:background="@drawable/cutom_round_button"
            android:onClick="addPassword"
            android:text="Add Password"
            android:textAllCaps="true"
            android:textColor="@color/color_white" />

        <EditText
            android:id="@+id/etxt_username_registration"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_below="@id/etxt_website_registration"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:hint="Enter Email/Username"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etxt_password_registration2"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_below="@id/pass_linear"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:hint="Confirm Password"
            android:inputType="textPassword" />


        <EditText
            android:id="@+id/etxt_website_registration"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_below="@id/loginscrn"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:hint="Enter Website"
            android:inputType="textPersonName" />


        <LinearLayout
            android:id="@+id/pass_linear"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_below="@id/checkBox"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp">

            <EditText
                android:id="@+id/etxt_password_registration1"
                android:layout_width="216dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"
                android:ems="10"
                android:hint="Enter password"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/pass_dola"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="9dp"
                android:onClick="showPassword"
                android:src="@drawable/password_eye" />
        </LinearLayout>


        <TextView
            android:id="@+id/checkBox"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etxt_username_registration"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="Tap To Auto Generate password"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/loginscrn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:inputType="text"
            android:text="Add New Password"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>