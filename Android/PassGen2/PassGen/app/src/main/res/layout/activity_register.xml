<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/btn_master_register"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_below="@id/et_secretanswer"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:background="@drawable/cutom_round_button"
            android:onClick="register_master"
            android:text="Register"
            android:textColor="@color/color_white" />

        <Button
            android:id="@+id/btn_master_login"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_below="@id/btn_master_register"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:background="@drawable/cutom_round_button"
            android:onClick="goOnLoginPage"
            android:text="Login"
            android:textColor="@color/color_white" />

        <EditText
            android:id="@+id/etxt_usnicid_master_registration"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_below="@id/loginscrn"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:ems="10"
            android:hint="Enter your Email ID"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etxt_password_master_registration1"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_below="@id/etxt_usnicid_master_registration"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:ems="10"
            android:hint="Enter your Master Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etxt_password_master_registration2"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_below="@id/etxt_password_master_registration1"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:ems="10"
            android:hint="Re-Enter your Master password"
            android:inputType="textPassword" />


        <EditText
            android:id="@+id/etxt_username_master_registration"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_below="@id/etxt_password_master_registration2"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:ems="10"
            android:hint="Enter your Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_secretanswer"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_below="@id/spinner_secret_question"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:ems="10"
            android:hint="Type Your Answer"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/reg_logo"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:src="@drawable/passgen_green_light" />

        <Spinner
            android:id="@+id/spinner_secret_question"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_below="@id/etxt_username_master_registration"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp" />

        <TextView
            android:id="@+id/loginscrn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@id/reg_logo"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Master Registration"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>