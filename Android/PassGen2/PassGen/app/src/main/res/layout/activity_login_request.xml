<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginRequest">
        <ImageView
            android:id="@+id/reg_logo"
            android:layout_width="128sp"
            android:layout_height="128sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/passgen_green_light" />
        <TextView
            android:id="@+id/loginscrn"
            android:layout_width="match_parent"
            android:layout_height="54sp"
            android:gravity="center"
            android:layout_margin="6sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/reg_logo"
            android:text="Request Device Access"
            android:textSize="25dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/unicid_EditText"
            android:layout_width="270sp"
            android:layout_height="54sp"
            android:hint="Enter your Email"
            android:layout_margin="6sp"
            android:inputType="textEmailAddress"
            android:layout_below="@id/loginscrn"
            android:layout_centerHorizontal="true"
            style="@style/AllTextsSize"
            android:ems="10" />


        <EditText
            android:id="@+id/password_EditText"
            android:layout_marginTop="20dp"
            android:layout_width="270sp"
            android:layout_height="54sp"
            android:layout_margin="6sp"
            android:hint="Enter Master Password"
            android:layout_below="@id/unicid_EditText"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            style="@style/AllTextsSize"
            android:ems="10" />
        <Button
            android:id="@+id/btn_request_access"
            android:layout_width="180sp"
            android:layout_height="36sp"
            android:layout_margin="6sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_white"
            android:layout_below="@id/password_EditText"
            android:background="@drawable/cutom_round_button"
            android:text="Send Request" />
    </RelativeLayout>
</ScrollView>