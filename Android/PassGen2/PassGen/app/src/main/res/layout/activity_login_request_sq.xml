<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".LoginRequestSQ">

        <Button
            android:id="@+id/btn_request_access"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_below="@id/secretanswer"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:background="@drawable/cutom_round_button"
            android:text="Send Request"
            android:textColor="@color/color_white" />

        <EditText
            android:id="@+id/secretanswer"
            style="@style/AllTextsSize"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_below="@id/secretquestion"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Type Your Answer"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/reg_logo"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:src="@drawable/passgen_green_light" />

        <TextView
            android:id="@+id/secretquestion"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sq_desc"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:gravity="left"
            android:text="What is your pet name?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loginscrn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@id/reg_logo"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:gravity="center"
            android:text="Request Device Access"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sq_desc"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginscrn"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:gravity="center"
            android:text="For Security Concerns, we ask you to answer the secret question that you entered at the time of your registration"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>