<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginRequest">

        <Button
            android:id="@+id/btn_request_access"
            android:layout_width="180sp"
            android:layout_height="36sp"
            android:layout_below="@id/password_EditText"
            android:layout_centerHorizontal="true"
            android:layout_margin="6sp"
            android:background="@drawable/custom_round_button"
            android:text="Send Request"
            android:textColor="@color/color_white" />

        <EditText
            android:id="@+id/password_EditText"
            style="@style/AllTextsSize"
            android:layout_width="270sp"
            android:layout_height="54sp"
            android:layout_below="@id/unicid_EditText"
            android:layout_centerHorizontal="true"
            android:layout_margin="6sp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Enter Master Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/unicid_EditText"
            style="@style/AllTextsSize"
            android:layout_width="270sp"
            android:layout_height="54sp"
            android:layout_below="@id/loginscrn"
            android:layout_centerHorizontal="true"
            android:layout_margin="6sp"
            android:ems="10"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress" />


        <ImageView
            android:id="@+id/reg_logo"
            android:layout_width="128sp"
            android:layout_height="128sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6sp"
            android:src="@drawable/passgen_green_light" />

        <TextView
            android:id="@+id/loginscrn"
            android:layout_width="match_parent"
            android:layout_height="54sp"
            android:layout_below="@id/reg_logo"
            android:layout_centerHorizontal="true"
            android:layout_margin="6sp"
            android:gravity="center"
            android:text="Request Device Access"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>