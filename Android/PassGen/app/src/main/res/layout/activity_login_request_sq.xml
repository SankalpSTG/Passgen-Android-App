<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".LoginRequestSQ">
        <ImageView
            android:id="@+id/reg_logo"
            android:layout_width="128sp"
            android:layout_height="128sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/passgen_green_light" />
        <TextView
            android:id="@+id/loginscrn"
            android:layout_width="match_parent"
            android:layout_height="54sp"
            android:gravity="center"
            android:layout_margin="6sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/reg_logo"
            android:text="Request Device Access"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sq_desc"
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="6sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/loginscrn"
            android:text="For Security Concerns, we ask you to answer the secret question that you entered at the time of your registration"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/secretquestion"
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="6sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sq_desc"
            android:text="What is love?"
            android:textSize="18dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/secretanswer"
            android:layout_marginTop="20dp"
            android:layout_width="270sp"
            android:layout_height="54sp"
            android:layout_margin="6sp"
            android:hint="Type Your Answer"
            android:layout_below="@id/secretquestion"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            style="@style/AllTextsSize"
            android:ems="10" />
        <Button
            android:id="@+id/btn_request_access"
            android:layout_width="180sp"
            android:layout_height="36sp"
            android:layout_margin="6sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/secretanswer"
            android:background="@drawable/custom_round_button"
            android:textColor="@color/color_white"
            android:text="Send Request" />
    </RelativeLayout>
</ScrollView>